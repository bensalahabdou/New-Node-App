<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
   <div class="container-fluid flex justify-content-center margin">
    <% if(!judokas){ %>
         <p>there's no judoka</p>
         <% } else { %>
            <div class="container-fluid" style="height: 500px;">
                <div class="row text-center">
                    <% judokas.forEach(judoka => { %>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title"><%= judoka.name %></h5>
                                    <a href="/judokas/<%= judoka.id %>" class="btn btn-outline-primary">Details</a>
                                </div>
                            </div> 
                        </div>
                           
                    <% }) %>
                </div>
            </div>
    <% } %>

</div>
    <%- include("../partials/footer.ejs") %> 
</body>
</html>




